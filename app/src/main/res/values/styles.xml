<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme.
     <item name="android:navigationBarColor">@color/colorPrimaryDark</item>-->



    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:fontFamily">@font/fontgeek</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppCompat.TelaCheia" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <!-- Theme.AppCompat.Light-->
    <style name="botaopadrao" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#00bff9</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/branco</item>
    </style>
    <style name="hint_line_edit_status" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#00bff9</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorAccent">@color/branco</item>
        <item name="android:textColor">@color/branco</item>
    </style>
    <style name="botaodeletar" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#FD4949</item>
        <item name="colorButtonNormal">#FF1919</item>
        <item name="colorAccent">#FD4949</item>
        <item name="android:textColor">@color/branco</item>
    </style>
    <style name="botaochat" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/md_amber_500</item>
        <item name="colorButtonNormal">@color/md_amber_700</item>
        <item name="android:textColor">@color/background_geral</item>
    </style>
    <style name="botaoComo_chegar" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/md_green_500</item>
        <item name="colorButtonNormal">@color/md_green_700</item>
        <item name="android:textColor">@color/background_geral</item>
    </style>
    <style name="botaopadrao2" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#00bff9</item>
        <item name="colorButtonNormal">@color/md_blue_400</item>
        <item name="android:textColor">@color/background_geral</item>
    </style>
    <style name="botaopadrao_cinza" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#85898B</item>
        <item name="colorButtonNormal">@color/cinzabalao</item>
        <item name="android:textColor">@color/background_geral</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.TextDivider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>

    </style>

    <style name="bottomnavigationItemAppearance">
        <!-- <item name="android:textColor">#8BC34A</item>-->
        <!-- <item name="android:textSize">20sp</item>-->
        <item name="android:fontFamily">@font/fontgeek</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
        <item name="android:textColorSecondary">@color/brancofraco</item>
    </style>

    <style name="spinner">
        <item name="android:fontFamily">@font/fontgeek</item>
    </style>

</resources>
