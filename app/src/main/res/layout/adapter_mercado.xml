<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
   android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
   >
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="8dp"
    android:elevation="4dp"
    cardview:cardCornerRadius="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
       >
        <com.facebook.drawee.view.SimpleDraweeView

            android:id="@+id/capamercado"
            android:layout_width="110sp"
            android:layout_height="110sp"
      />

            <TextView
                android:id="@+id/texttitulo"
                android:fontFamily="@font/fontgeek"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/capamercado"
                android:text="titulo"
                android:textColor="@color/pretoescrita"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_toLeftOf="@+id/textcategoria"
                android:layout_toRightOf="@+id/capamercado"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                android:text="UM BELO DIA"
                android:id="@+id/textlegenda"
              android:lines="3"
                android:fontFamily="@font/fontgeek"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/capamercado"
                android:layout_below="@+id/texttitulo" />


            <TextView
                android:id="@+id/textcategoria"
             android:fontFamily="@font/fontgeek"
                android:layout_width="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/cinzadisabilitado"
                />

        <Button
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/botao_ver_loja"
            android:layout_width="110dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_height="40dp"
            android:text="Ver Loja"
            android:textSize="18sp"
            android:fontFamily="@font/fontgeek"
            android:theme="@style/botaopadrao"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>