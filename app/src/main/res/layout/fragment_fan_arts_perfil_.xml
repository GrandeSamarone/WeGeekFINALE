<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragments.perfil.FanArts_perfil_Fragment">
  <LinearLayout
      android:id="@+id/linear_nada_cadastrado_perfil_fanart"
      android:layout_width="match_parent"
      android:visibility="gone"
      android:layout_height="match_parent"
      android:orientation="vertical"

      android:gravity="center_horizontal">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/famats_nada_encontrado"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="Nenhuma publicação no momento."/>
  </LinearLayout>
  <android.support.v7.widget.RecyclerView
      android:id="@+id/perfil_lista_art"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

</LinearLayout>