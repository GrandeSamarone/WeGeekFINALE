<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="190dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="8dp"
    cardview:cardCornerRadius="4dp"
    android:id="@+id/cardevento">
    <androidx.cardview.widget.CardView
       app:cardCornerRadius="10dp"
        android:elevation="6dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:ignore="MissingConstraints">
    <com.facebook.drawee.view.SimpleDraweeView

        android:id="@+id/iconeevento"
        android:layout_width="130sp"
        android:layout_height="170sp"
        android:layout_gravity="center"
        card_view:ignore="MissingConstraints" />
    <View
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradientefundobranco"
        android:fitsSystemWindows="true" />
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical">

<LinearLayout
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView

       android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Nome"
        android:id="@+id/nomeevento"
        android:textColor="@color/branco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
       android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/fontgeek"
      />
        <Button
           android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/botao_ver_loja"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Ver Evento"
            android:textSize="18sp"
            android:fontFamily="@font/fontgeek"
            android:theme="@style/botaopadrao"
            />
</LinearLayout>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
