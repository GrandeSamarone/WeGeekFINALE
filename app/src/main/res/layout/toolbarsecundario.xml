<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarsecundario"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/Theme.AppCompat"
        android:background="@drawable/gradiente_toolbar"/>


    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/app_toolbar_title_secundario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp"
        android:lines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/background_geral"
        android:fontFamily="@font/fontgeek"/>
    <FrameLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarsecundario">
        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/toolbar_sombra"/>
    </FrameLayout>
</RelativeLayout>
</FrameLayout>