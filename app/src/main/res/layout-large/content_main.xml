<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context="com.example.fulanoeciclano.nerdzone.Activits.MainActivity"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- TODO: Update blank fragment layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pretoescrita"
                        android:textSize="18sp"
                        android:paddingTop="8dp"
                        android:paddingLeft="16dp"
                        android:text="Notícias"
                        android:layout_weight="0"

                        />
                    <TextView
                        android:id="@+id/maisPREMIO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:text=""
                        android:gravity="right"
                        android:layout_weight="1"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        />
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_votacao"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="8dp"
                            android:id="@+id/imgtrofeu"
                            android:layout_width="64sp"
                            android:layout_height="64sp"
                            android:src="@drawable/trofeu_noticia"/>
                        <TextView
                            android:id="@+id/titulonoticia"
                            android:textColor="@color/pretoescrita"
                            android:textStyle="bold"
                            android:layout_margin="4dp"
                            android:layout_toRightOf="@+id/imgtrofeu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PRÊMIO NERD ROCK"/>
                        <TextView
                            android:layout_marginLeft="4dp"
                            android:id="@+id/descricao_noticia"
                            android:text="@string/texto_noticia"
                            android:layout_below="@+id/titulonoticia"
                            android:layout_toRightOf="@+id/imgtrofeu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_below="@+id/descricao_noticia"
                            android:layout_alignParentBottom="true"
                            android:gravity="right"
                            android:textColor="@color/Corrastag"
                            android:layout_margin="4dp"
                            android:text="Quero Participar!"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pretoescrita"
                        android:textSize="18sp"
                        android:paddingTop="8dp"
                        android:paddingLeft="16dp"
                        android:text="Eventos"
                        android:layout_weight="0"

                        />
                    <TextView
                        android:id="@+id/maisevento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:text="MAIS"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        />
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/nada_encontrado_evento_inicial"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/cinzadisabilitado"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="@string/text_nd_event"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:clipToPadding="false"
                        android:id="@+id/RecycleViewEventos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pretoescrita"
                        android:textSize="18sp"
                        android:paddingTop="8dp"
                        android:paddingLeft="16dp"
                        android:text="Comércio"

                        />
                    <TextView
                        android:id="@+id/maiscomercio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:text="@string/mais_comercio"
                        android:gravity="right"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        />
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/nada_encontrado_mercado_inicial"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/cinzadisabilitado"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="@string/text_mercado_nd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/RecycleViewMercado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:clipToPadding="false"
                        />
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pretoescrita"
                        android:textSize="18sp"
                        android:paddingTop="8dp"
                        android:paddingLeft="16dp"
                        android:text="Tópicos"
                        android:layout_weight="0"

                        />
                    <TextView
                        android:id="@+id/maistopicos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:text="MAIS"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        />
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/nada_encontrado_topico_inicial"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/cinzadisabilitado"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="@string/text_nd_topico"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:clipToPadding="false"
                        android:id="@+id/RecycleViewTopicos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pretoescrita"
                        android:textSize="18sp"
                        android:paddingTop="8dp"
                        android:paddingLeft="16dp"
                        android:text="Contos"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:text="MAIS"
                        android:id="@+id/maisconto"
                        android:gravity="right"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        />
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/nada_encontrado_contos_inicial"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/cinzadisabilitado"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="@string/nda_encontrado_conto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:clipToPadding="false"
                        android:id="@+id/RecycleViewConto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pretoescrita"
                        android:textSize="18sp"
                        android:paddingTop="8dp"
                        android:paddingLeft="16dp"
                        android:text="WeArts"
                        android:layout_weight="0"

                        />
                    <TextView
                        android:id="@+id/maisfanart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:text="MAIS"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        />
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="16dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/nada_encontrado_art_inicial"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/cinzadisabilitado"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="@string/text_nd_fanart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:clipToPadding="false"
                        android:id="@+id/RecycleViewFanArts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/adapterevento"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </FrameLayout>
</LinearLayout>